# i3 status bar config
# Started with copy of /etc/i3status.conf
# http://i3wm.org/docs/userguide.html#_configuring_i3bar

general {
	colors = true
        output_format = i3bar
	interval = 5
}

order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "mempercent"
order += "battery 0"
order += "volume master"
order += "time"

battery 0 {
        format = "Battery status 🔋 %status %percentage %remaining"
}

time {
        format = "Date time 🕐  W%V %a %Y-%m-%d %H:%M"
}

cpu_usage {
    format = "Cpu load 💻 %usage"
}

cpu_temperature 0 {
        format = "Cpu temp 🌡 %degrees°c"
}

disk "/" {
        format = "Root 💾 %free"
}

disk "/home" {
        format = "Home 💾 %free"
}

volume master {
   format = "Volume ♬💃 %volume"
   device = "default"
   mixer = "Master"
   mixer_idx = 0
}
